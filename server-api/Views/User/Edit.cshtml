@model UserViewModel
@{
    var checkBoxData = ViewBag.CheckBoxData;
}
<div class="bg-primary text-center m-1 p-1 text-white"><h4>Edit Account</h4></div> 
@* <div asp-validation-summary="All"></div> *@
<form asp-action="Edit" method="post">
    <input type="hidden" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="bg-primary p-1 m-1 text-white text-center"><h5>В каких группах состоит пользователь</h5></div>
    <div class="form-group" checkbox-list="@checkBoxData"
    checkbox-list-item-tag = "div" checkbox-list-item-class = "form-check form-check-inline"
    checkbox-list-checkbox-class="form-check-input"
    checkbox-list-label-class="form-check-input"
    >
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary text-danger">Отмена</a>
</form>
